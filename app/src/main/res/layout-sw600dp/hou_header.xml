<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feedback_header">

    <ImageView
        android:id="@+id/header_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/group_1171276337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/header_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_img" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/header_img" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp"
        android:text="@string/hou"
        android:textColor="@color/white"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintStart_toEndOf="@+id/header_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shyamala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/shiva_kumar"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/physiotherapist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/clinic_admin"
        android:textColor="@color/grey_white"
        android:textSize="@dimen/_4ssp"
        app:layout_constraintStart_toStartOf="@+id/shyamala"
        app:layout_constraintTop_toBottomOf="@+id/shyamala" />


    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/logout"
        android:textColor="@color/rust"
        android:textSize="@dimen/_4ssp"
        app:layout_constraintStart_toEndOf="@+id/physiotherapist"
        app:layout_constraintTop_toBottomOf="@+id/shyamala" />


</androidx.constraintlayout.widget.ConstraintLayout>