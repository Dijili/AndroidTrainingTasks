<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/title_template"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        android:background="@color/blue">

        <TextView
            android:id="@+id/new_registration_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_10"
            android:text="@string/new_registration_text"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/demographics_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_10"
            android:text="@string/demographics_text"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"></RelativeLayout>
    <TextView
        android:id="@+id/patient_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_template"
        android:layout_marginTop="@dimen/margin_10"
        android:padding="@dimen/margin_10"
        android:text="@string/patient_information_text"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_information"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:text="@string/first_name"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/firstname_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/edit_textboxes" />

    <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_information"
        android:layout_alignBaseline="@+id/first_name"
        android:layout_alignStart="@+id/lastname_edit"
        android:layout_alignParentEnd="true"
        android:text="@string/last_name"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/lastname_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name"
        android:layout_alignBaseline="@+id/firstname_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_textboxes" />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstname_edit"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:text="@string/email"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/edit_textboxes" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname_edit"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="105dp"
        android:text="@string/phone_number"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/phonenumber_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@drawable/edit_textboxes" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_edit"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/address_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        android:layout_below="@+id/address"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_textboxes" />


    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_edit"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:text="@string/city"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/city_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/edit_textboxes" />

    <!--    <Spinner-->
