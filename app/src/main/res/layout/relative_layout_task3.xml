    <TextView
        android:id="@+id/date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zipcode_edit"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:text="@string/date_of_birth"
        android:textColor="@color/black"
        android:textSize="15sp" />



    <EditText
        android:id="@+id/dateofbirth_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_of_birth"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/date_of_birth_edit" />


    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zipcode_edit"
        android:layout_alignBaseline="@+id/date_of_birth"
        android:layout_marginLeft="@dimen/margin_50"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toRightOf="@+id/date_of_birth"
        android:text="@string/age"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/age_edit"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_centerInParent="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/dateofbirth_edit"
        android:background="@drawable/age_edit" />


    <TextView
        android:id="@+id/occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_edit"
        android:layout_alignBaseline="@+id/date_of_birth"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin"
        android:text="@string/occupation"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/occupation_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupation"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_14"
        android:background="@drawable/edit_textboxes" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateofbirth_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/gender"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/marital_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupation_edit"
        android:layout_alignBaseline="@+id/gender"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="100dp"
        android:text="@string/marital_status"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/male_button"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_below="@+id/gender"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/parent_bottom_buttons"
        android:text="@string/male"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/female_button"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_below="@+id/gender"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="64dp"
        android:layout_toRightOf="@+id/male_button"
        android:background="@drawable/parent_bottom_buttons"
        android:text="@string/female"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/other_button"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_below="@+id/gender"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="64dp"
        android:layout_toRightOf="@+id/female_button"
        android:background="@drawable/parent_bottom_buttons"
        android:text="@string/other"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/single_button"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_below="@+id/marital_status"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="64dp"
        android:layout_toRightOf="@+id/other_button"
        android:background="@drawable/parent_bottom_buttons"
        android:text="@string/single"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/married_button"
        android:layout_width="55dp"
        android:layout_height="32dp"
        android:layout_below="@+id/marital_status"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="64dp"
        android:layout_toRightOf="@+id/single_button"
        android:background="@drawable/parent_bottom_buttons"
        android:text="@string/married"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/divorced_button"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_below="@+id/marital_status"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="64dp"
        android:layout_toRightOf="@+id/married_button"
        android:background="@drawable/parent_bottom_buttons"
        android:text="@string/divorced"
        android:textAllCaps="false"
        android:textColor="@color/black" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marital_status"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/save_button"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</RelativeLayout>


